{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "strict": true,
        "strictFunctionTypes": false,
        "module": "esnext",
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "types": [
            "node"
        ],
        "baseUrl": ".",
        "typeRoots": [
            "lib/iniquity.d.ts"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "skipLibCheck": true
    },
    "exclude": [
        ".vscode",
        "assets",
        "docs",
        "hooks",
        "node_modules",
        "platforms",
        "private",
        "public",
        "spec",
        "**/serverless/*"
    ]
}
