#!/usr/bin/env ruby
# encoding: UTF-8

BEGIN {
    unless ARGV[0] || ENV["INIQUITY_SYSTEM"]
        abort "Please set the INIQUITY_SYSTEM environment variable."
    end
}

HOME = ARGV[0] || ENV["INIQUITY_SYSTEM"]
ENV["INIQUITY_SYSTEM"] = HOME

require "inifile"
require "socksify"
require "github_api"
require "json"

puts "ipm - The Iniquity Package Manager.\n\n"

repositories = Github.repos.list user: "iniquitybbs"

repositories.each do |repo|
    puts repo.name
end

puts "#{packages.length} total packages.\n"
